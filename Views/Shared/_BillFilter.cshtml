<div class="modal" tabindex="-1" role="dialog" id="BillSearchModal" aria-labelledby="BillSearchModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bill Search</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
      
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6">Bill Id</div>
                        <div class="col-md-6">
                            <select class="form-control form-control-sm" id="ddlbillId" asp-items="ViewBag.Bill">
                                <option></option>
                            </select>
                        </div>
                    </div>
            
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="openBill()">Open</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    function openBill() {
        window.location = "/BillDetail/Creates?BillId=" + $("#ddlbillId").val();
    }
</script>
@model Zedx.Models.ViewModel.BillandBillDetail


@{
    ViewData["Title"] = "Create";

}
<div class="row">

    <div class="col-md-12">
        <form asp-action="Creates" id="BillDetailForm" method="post" data-ajax="true" data-ajax-success="onSuccess" data-ajax-method="post" data-ajax-update="#divAddProducts" data-ajax-loading=".modalloader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.Bill.Customers.CustomerId)
            @Html.HiddenFor(x => x.BillDetail.AllProductId)
            @Html.HiddenFor(x => x.Bill.BillId)
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">Bill Id</label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label id="lblBillId" class="control-label">@Model.Bill.BillId</label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">Customer</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control form-control-sm" asp-for="Bill.CustomerId" asp-items="ViewBag.CustomerId">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">Type</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control form-control-sm" id="product_type" asp-items="ViewBag.ProductTypeId">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.AluminumColorId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <select asp-for="BillDetail.AluminumColorId" class="form-control form-control-sm pAlum" asp-items="ViewBag.AluminumColorId">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.AluminumGageId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <select asp-for="BillDetail.AluminumGageId" class="form-control form-control-sm pAlum" asp-items="ViewBag.AluminumGageId">
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.AllProduct.Name" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="BillDetail.AllProduct.Name" autocomplete="off" class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.AllProduct.Name" class="text-danger"></span>
                        <div id="divProductsSerachResults"></div>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.Rate" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="BillDetail.Rate" class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.Rate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.Discount" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="BillDetail.Discount"  class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.Discount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.Feet" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="BillDetail.Feet"  class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.Feet" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.Quantity" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="BillDetail.Quantity"  class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.TotalFeet" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="BillDetail.TotalFeet"  readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.TotalFeet" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="BillDetail.NetAmount" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="BillDetail.NetAmount"  readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.NetAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="BillDetail.DiscountedAmount" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="BillDetail.DiscountedAmount"  readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.DiscountedAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="BillDetail.AmountToBePaid" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="BillDetail.AmountToBePaid"  readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="BillDetail.AmountToBePaid" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="BillDetail.SheetHeight" class="control-label"></label>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="BillDetail.SheetHeight"  class="form-control form-control-sm pGlass" />
                        <span asp-validation-for="BillDetail.SheetHeight" class="text-danger pGlass"></span>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="BillDetail.SheetWidth" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="BillDetail.SheetWidth"  class="form-control form-control-sm pGlass" />
                        <span asp-validation-for="BillDetail.SheetWidth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="button" value="Create" onclick="BillDetailSubmit(this)" class="btn btn-primary btn-sm" />
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#BillSearchModal">
                            Bill Search
                        </button>

                        <a class="btn btn-primary btn-sm" href="/BillDetail/Creates" role="button">New</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12" id="divAddProducts">
                    <partial name="_BillDetails" model="Model">
                </div>
            </div>
        </form>
        <partial name="_BillFilter">
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/BillCreates.js"></script>

}
@section Styles{
    <style>
        #divProductsSerachResults {
            position: absolute;
            border: 1px solid grey;
            background-color: white;
            z-index: 1;
            border-radius: 7px;
        }
    </style>
}

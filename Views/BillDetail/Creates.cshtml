@model Zedx.Models.DTO.BillRequest


@{
    ViewData["Title"] = "Create";

}
<div class="row">

    <div class="col-md-12">
        <form asp-action="Creates" id="BillDetailForm" method="post" data-ajax="true" data-ajax-success="onSuccess" data-ajax-method="post" data-ajax-update="#divAddProducts" data-ajax-loading=".modalloader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.AllProductId)
            @Html.HiddenFor(x => x.BillDetailId)
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">Bill Id</label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label id="lblBillId" class="control-label">@Model.BillId</label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">Customer</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control form-control-sm" asp-for="CustomerId" asp-items="ViewBag.CustomerId">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label">Type</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <select class="form-control form-control-sm" id="product_type" asp-items="ViewBag.ProductTypeId">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="AluminumColorId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <select asp-for="AluminumColorId" class="form-control form-control-sm pAlum" asp-items="ViewBag.AluminumColorId">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="AluminumGageId" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <select asp-for="AluminumGageId" class="form-control form-control-sm pAlum" asp-items="ViewBag.AluminumGageId">
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label">Name</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input asp-for="ProductName" autocomplete="off" class="form-control form-control-sm" />
                        <span asp-validation-for="ProductName  " class="text-danger"></span>
                        <div id="divProductsSerachResults"></div>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Rate" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="Rate" class="form-control form-control-sm" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Discount" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="Discount" class="form-control form-control-sm" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Feet" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="Feet" class="form-control form-control-sm" />
                        <span asp-validation-for="Feet" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="Quantity" class="form-control form-control-sm" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="TotalFeet" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="TotalFeet" readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="TotalFeet" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="NetAmount" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <input asp-for="NetAmount" readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="NetAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="DiscountedAmount" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="DiscountedAmount" readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="DiscountedAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="AmountToBePaid" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="AmountToBePaid" readonly="readonly" class="form-control form-control-sm" />
                        <span asp-validation-for="AmountToBePaid" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="SheetHeight" class="control-label"></label>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="SheetHeight" class="form-control form-control-sm pGlass" />
                        <span asp-validation-for="SheetHeight" class="text-danger pGlass"></span>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="SheetWidth" class="control-label"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input asp-for="SheetWidth" class="form-control form-control-sm pGlass" />
                        <span asp-validation-for="SheetWidth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="button" value="Create" onclick="BillDetailSubmit(this)" class="btn btn-primary btn-sm" />
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#BillSearchModal">
                            Bill Search
                        </button>
                        <a class="btn btn-primary btn-sm" href="/BillDetail/Creates" role="button">New</a>

                        <input type="button" value="Print" onclick="BillPrint('A4')" class="btn btn-primary btn-sm" />
                        <div class="input-group-prepend" style="display:none">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Print</button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item"onclick="BillPrint('A4')">A4</a>
                                <div role="separator" class="dropdown-divider"></div>
                                <a class="dropdown-item" onclick="BillPrint('A5')">A5</a>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12" id="divAddProducts">
                    <partial name="_BillDetails" model="Model">
                </div>
            </div>
        </form>
        <partial name="_BillFilter">
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/BillCreates.js"></script>

}
@section Styles{
    <style>
        #divProductsSerachResults {
            position: absolute;
            border: 1px solid grey;
            background-color: white;
            z-index: 1;
            border-radius: 7px;
        }
    </style>
}
